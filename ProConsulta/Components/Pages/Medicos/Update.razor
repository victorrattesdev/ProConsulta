@page "/medicos/update/{MedicoId:int}"
@using Microsoft.AspNetCore.Authorization
@inherits UpdateMedicoPage

@attribute [Authorize(Roles = "Atendente")]

<PageTitle>Médicos</PageTitle>

<MudText Typo="Typo.h3">Atualizar Médico</MudText>

<MudPaper Class="pa-8 mt-4">

    <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">

        <DataAnnotationsValidator />

        <MudTextField Label="Nome"
                      Variant="Variant.Outlined"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Nome"
                      For="@(()=> InputModel.Nome)" />

        <MudTextField Label="Documento"
                      Variant="Variant.Outlined"
                      HelperText="Campo obrigatório"
                      @bind-Value="@InputModel.Documento"
                      Mask="@(new PatternMask("000.000.000-00"))"
                      For="@(()=> InputModel.Documento)" />

        <MudTextField Label="CRM"
                      Variant="Variant.Outlined"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Crm"
                      Mask="@(new PatternMask("aa-000000"))"
                      For="@(()=> InputModel.Crm)" />

        <MudTextField Label="Celular"
                      Variant="Variant.Outlined"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Celular"
                      Mask="@(new PatternMask("(00) 0 0000-0000"))"
                      For="@(()=> InputModel.Celular)" />

        <MudSelect Label="Especialidade"
                   @bind-Value="InputModel.EspecialidadeId"
                   Variant="Variant.Outlined"
                   AnchorOrigin="Origin.BottomCenter"
                   For="@(()=> InputModel.EspecialidadeId)">

            @foreach (var especialidade in Especialidades)
            {
                <MudSelectItem Value="@especialidade.Id">@especialidade.Nome</MudSelectItem>
            }

        </MudSelect>

        <MudDivider Class="m-4" />

        <MudButton Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Save"
                   Color="Color.Info"
                   Size="Size.Large"
                   ButtonType="ButtonType.Submit">
            SALVAR
        </MudButton>

    </EditForm>

</MudPaper>